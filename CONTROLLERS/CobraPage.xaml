<UserControl x:Class="NEW_COBRA.CobraPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NEW_COBRA"
             mc:Ignorable="d" 
             d:DesignHeight="612" d:DesignWidth="800"
             Name="PageControl">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="111*"/>
            <RowDefinition Height="538*"/>
        </Grid.RowDefinitions>
        <Border BorderBrush="Black" BorderThickness="1" Margin="0,4.8,0,2" Grid.Row="0">
            <Grid x:Name="headPage"  >
                <ContentControl  Content="{Binding HeadPage,ElementName=PageControl}" Margin="0,0,0,0.2"></ContentControl>

            </Grid>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1" Margin="0,4.8,0,-0.4" Grid.Row="1">
        <Grid x:Name="bodyPage" >
            <ContentControl  Content="{Binding BodyPage,ElementName=PageControl}"></ContentControl>
        </Grid>
        </Border>
    </Grid>
</UserControl>
